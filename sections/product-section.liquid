<!--
  Lets Create a main container in which there will be six grids
  representing each product
-->
<div class="container">
  <p class="Tisso-txt">Tisso vison in the wild</p>

  <!-- main grid in which 6 sections are there -->
  <div class="grid">
    <!-- Product 1 -->
    <div class="section">
      <div class="customizer" onclick="openPopup(0)">
        <img src="{{ 'plus.png' | asset_url }}" alt="Plus Icon">
      </div>
      <img src="{{ 'image 822.png' | asset_url }}" alt="Product 1">
    </div>
    <!-- Product 2 -->
    <div class="section">
      <div class="customizer" onclick="openPopup(1)">
        <img src="{{ 'plus.png' | asset_url }}" alt="Plus Icon">
      </div>
      <img src="{{ 'image 823.png' | asset_url }}" alt="Product 2">
    </div>
    <!-- Product 3 -->
    <div class="section">
      <div class="customizer" onclick="openPopup(2)">
        <img src="{{ 'plus.png' | asset_url }}" alt="Plus Icon">
      </div>
      <img src="{{ 'image 824.png' | asset_url }}" alt="Product 3">
    </div>
    <!-- Product 4 -->
    <div class="section">
      <div class="customizer" onclick="openPopup(3)">
        <img src="{{ 'plus.png' | asset_url }}" alt="Plus Icon">
      </div>
      <img src="{{ 'image 825.png' | asset_url }}" alt="Product 4">
    </div>
    <!-- Product 5 -->
    <div class="section">
      <div class="customizer" onclick="openPopup(4)">
